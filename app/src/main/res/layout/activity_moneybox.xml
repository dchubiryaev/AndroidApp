<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@android:style/Theme.Black.NoTitleBar"
    tools:context=".money.spent.Spent"
    >

    <LinearLayout
        android:layout_width="345dp"
        android:layout_height="500dp"
        android:orientation="vertical"
        android:gravity="center"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"
        >

        <LinearLayout
            android:layout_width="345dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">

            <TextView
                android:id="@+id/textBalance"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:fontFamily="casual"
                android:gravity="left"
                android:text="Balance" />

            <TextView
                android:id="@+id/textMoneyBalance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:fontFamily="casual"
                android:gravity="right"
                android:text="Balance" />
        </LinearLayout>

        <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="80dp"
        android:layout_width="360dp"
        tools:layout_editor_absoluteY="50dp">

        <EditText
            android:id="@+id/setMoneyText"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_margin="10dip"
            android:gravity="center"
            android:textSize="40dp"
            android:fontFamily="casual"
            android:inputType="numberSigned"
            android:background="@drawable/outline_background"
            />

        <Button
            android:id="@+id/button_calc"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:layout_margin="10dip"
            android:background="@drawable/outline_background"
            android:text="Put"
            android:textAllCaps="false"
            android:textSize="40dp"
            android:fontFamily="casual"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.85"
            app:layout_constraintRight_toRightOf="parent"
            android:padding="0dip"
            android:onClick="addMoney"
            />
    </LinearLayout>

        <ListView
            android:id="@+id/listView"
            android:layout_width="340dp"
            android:layout_height="290dp"
            android:gravity="center"
            android:background="@drawable/outline_background"
            android:listSelector="@color/colorPrimaryDark"></ListView>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="80dp"
            android:layout_marginTop="0dp"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="0dp">

            <Button
                android:id="@+id/button_add"
                android:layout_width="310dp"
                android:layout_height="60dp"
                android:layout_margin="10dip"
                android:background="@drawable/outline_background"
                android:drawableLeft="@drawable/addnew"
                android:fontFamily="casual"
                android:onClick="addPositionToMoneyBox"
                android:paddingLeft="20dip"
                android:text="Add new"
                android:textAllCaps="false"
                android:textSize="40dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.85" />

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
